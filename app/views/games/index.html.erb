<p style="color: green"><%= notice %></p>
<%= stylesheet_link_tag('game') %>
<% content_for :title, "Games" %>

<body>
  <div class="page-header">
    <h1>Games</h1>
  </div>
  <div class="games-grid">
    <% @games.each do |game| %>
      
      <div class="grid-item">
        <%= link_to (render game), game %>
      </div>
    <% end %>
  </div>

  <%= link_to "New game", new_game_path %>

</body>

